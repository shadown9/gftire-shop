rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Funci칩n para verificar si el usuario est치 autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Funci칩n para verificar si el usuario es admin
    function isAdmin() {
      return isAuthenticated() && 
        firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Permitir lectura a todos los usuarios autenticados
    match /{allPaths=**} {
      allow read: if isAuthenticated();
    }

    // Permitir escritura de im치genes de productos para usuarios autenticados
    match /product-images/{fileName} {
      allow write: if isAuthenticated() &&
        // Verificar que el archivo sea una imagen y menor a 5MB
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
  }
}

